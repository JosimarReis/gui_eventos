{% extends 'base.html.twig' %}
{% block body %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Usu√°rio</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Alterar a senha de {{ usuario.nome}}
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    {{ form_errors(form, {'attr':{'class':'alert alert-danger'}}) }}

                                    <div class="form-group">
                                        {{ form_label(form.senha.first) }}
                                        {{ form_errors(form.senha.first, {'attr':{'class':'alert alert-danger'}}) }}
                                        {{ form_widget(form.senha.first, {'attr':{'class':'form-control'}}) }}
                                        {{ form_label(form.senha.second) }}
                                        {{ form_errors(form.senha.second, {'attr':{'class':'alert alert-danger'}}) }}
                                        {{ form_widget(form.senha.second, {'attr':{'class':'form-control'}}) }}
                                    </div>
                                        {{ form_widget(form.salvar, {'attr':{'class':'btn btn-success'}}) }}
                                    
                                        <a href="/usuario" class="btn btn-link">Cancelar</a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                </div>
            </div>
</div>

{% endblock %}