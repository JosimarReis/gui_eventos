{% extends 'base.html.twig' %}
{% block title %}
Eventos | Usuários
{% endblock %}
{% block breadcrumbTitulo %}
Usuários| {{ titulo }}
{% endblock %}
{% block breadcrumb %}
<li><a href="/">Início</a></li>
<li><a href="/admin/usuarios">Usuários</a></li>
<li>Novo</li>
{% endblock %}
{% block body %}
<div class="content">
    <div class="animated fadeIn">
        <div class="col-lg-8 col-sm-12 col-md-12 col-12 ">
            <div class="card">
            <div class="card-body card-block">

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_errors(form, {'attr':{'class':'alert alert-danger'}}) }}

            <div class="form-group">
                {{ form_label(form.nome) }}
                {{ form_errors(form.nome, {'attr':{'class':'alert alert-danger'}}) }}
                {{ form_widget(form.nome, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email, {'attr':{'class':'alert alert-danger'}}) }}
                {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password.first) }}
                {{ form_errors(form.password.first, {'attr':{'class':'alert alert-danger'}}) }}
                {{ form_widget(form.password.first, {'attr':{'class':'form-control'}}) }}
                {{ form_label(form.password.second) }}
                {{ form_errors(form.password.second, {'attr':{'class':'alert alert-danger'}}) }}
                {{ form_widget(form.password.second, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.roles) }}
                {{ form_errors(form.roles, {'attr':{'class':'alert alert-danger'}}) }}
                {{ form_widget(form.roles, {'attr':{'class':'form-control'}}) }}
            </div>
            
        </div>
            <div class="card-footer">
                    {{ form_widget(form.salvar, {'attr':{'class':'btn btn-primary btn-sm  text-dark'}}) }}

                <a href="/admin/usuarios" class="btn-link btn-danger btn-sm text-dark">Cancelar</a>
                
              </div>
            {{ form_end(form) }}

        </div>
    </div>
    </div>
  </div>
{% endblock %}